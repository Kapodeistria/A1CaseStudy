# EditorConfig: https://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[*.{json,yml,yaml}]
indent_size = 2

[*.{js,jsx,ts,tsx,mjs}]
indent_size = 2

[*.css]
indent_size = 2

[*.sh]
indent_style = space
indent_size = 2
